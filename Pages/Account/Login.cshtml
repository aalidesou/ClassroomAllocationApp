@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-container">
    <h2>Login</h2>

    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" name="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="Password" class="form-control" />
        </div>

        <div class="button-group">
            <!-- For now these are just links -->
            <a href="/Student/Index" class="btn btn-primary">Login as Student</a>
            <a href="/Teacher/Index" class="btn btn-secondary">Login as Teacher</a>
            <a href="/Admin/Index" class="btn btn-danger">Login as Admin</a>
        </div>
    </form>
</div>

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background: #fff;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
    }
    .button-group {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .btn {
        text-align: center;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
    }
    .btn-primary { background: #007bff; }
    .btn-secondary { background: #6c757d; }
    .btn-danger { background: #dc3545; }
</style>
